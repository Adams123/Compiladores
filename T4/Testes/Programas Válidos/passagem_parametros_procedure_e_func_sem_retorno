PROGRAM TESTE2;
{teste de coment√°rio em programa}
VARIABLES 
	INTEGER a;
	REAL b, N1, N2, N3, MediaAlunos, AVERAGE;


	
PROCEDURE FindFormula; 
PARAMETERS
INTEGER x;
REAL y;
	
FUNCTION media;
PARAMETERS
INTEGER a;
INTEGER b;
VAR INTEGER c;

TYPES Arraytype ARRAY INTEGER [5];
VARIABLES 
REAL SUM;
ArrayType Vet;

BEGIN
SET Sum = a+b+c;
SET AVERAGE=SUM/3;
SET Vet[1] = 10;
END;


BEGIN
		WHILE X ! 0 DO
		IF X<0 THEN SET y = 10 - 4.5 * x
		ELSE SET y = 4.5 * -x + 10
		ENDIF;
		WRITE y;
		READ x;
		READ N1;READ N2;READ N3;
		SET MediaAlunos = media(N1,N2,N3)
		ENDWHILE
END;
	


{main}		 

BEGIN
	READ a;
	CALL FindFormula(a,b);
	WRITE b		
END.