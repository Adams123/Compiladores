PROGRAM media;
	DECLARE
		INTEGER MEDIA;
		INTEGER B;
	PROCEDURE CalculaMedia;
		PARAMETERS
			INTEGER TOTAL;
			INTEGER COUNT;
		BEGIN
			WHILE B ! 0 DO
				READ B;	{VALOR DE ENTRADA DO USUARIO}
				SET TOTAL = TOTAL + B;
				SET COUNT = COUNT+1;
			END;
			SET TOTAL = TOTAL / COUNT; {SALVA A MEDIA NO TOTAL}
			WRITE TOTAL;
		END;
	BEGIN
		READ B;
		CALL CalculaMedia(Media,B)
		WRITE MEDIA;
	END.